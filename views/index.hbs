<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
			crossorigin="anonymous"
		/>
		<script
			src="https://kit.fontawesome.com/f9da693e45.js"
			crossorigin="anonymous"
		></script>
		<link rel="stylesheet" href="/css/style.css" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/js/index.js"></script>
		<title>MCO2</title>
	</head>

	<body>
		<div id="container">
			<div class="text-center">
				<h1>Transaction Management</h1>
			</div>

			<!-- TOP SECTION -->
			<div class="section space-in-between">
				<div>
					<!-- Search bar -->
					<div>
						<form class="inline" action="none">
							<input
								class="form-control mr-sm-2"
								type="search"
								placeholder="Search"
								aria-label="Search"
                id="search-input"
                name="search-input"
							/>
							<button
								id="search-btn"
								class="btn btn-outline-success my-2"
								type="submit"
							>
								<i class="fa-solid fa-magnifying-glass"></i>
							</button>
						</form>
					</div>
				</div>

				<div>
					<!-- Select isolation level -->
					<form>
						<label for="isolation-type" class="form-label">Isolation Level</label>
						<select
							class="form-select form-select-sm"
							aria-label=".form-select-sm example"
							name="isolation-type"
              				id="isolation-type"
						>
							<option value=1>Read Uncommitted</option>
							<option value=2>Read Committed</option>
							<option value=3>Repeatable Read</option>
							<option value=4>Serializable</option>
						</select>
						<button
							id="set-isolation-type"
							type="button"
							class="btn btn-primary btn-sm"
							>
							<i class="fa-solid fa-check"></i>
						</button>
					</form>

					<!-- Enable/Disable nodes -->
					<div id="node-btns">
						<button id="central-node" type="button" class="btn btn-primary btn-sm" data-bs-toggle="button" autocomplete="off" data-state="false">Central Node</button>
						<button id="left-node" type="button" class="btn btn-primary btn-sm" data-bs-toggle="button" autocomplete="off" data-state="false">Left Node</button>
						<button id="right-node" type="button" class="btn btn-primary btn-sm" data-bs-toggle="button" autocomplete="off" data-state="false">Right Node</button>
					</div>
				</div>
			</div>

			<!-- CENTER SECTION -->
			<div class="section marg-top">
				<div class="space-in-between">
					<div>
						<h2>Results</h2>
					</div>

					<div>
						<button
							id="add-movie"
							type="button"
							class="btn btn-primary btn-sm"
							data-bs-toggle="modal"
							data-bs-target="#add-movie-modal"
						>
							Add Movie
						</button>
						<!-- Modal -->
						<div
							class="modal fade"
							id="add-movie-modal"
							tabindex="-1"
							aria-labelledby="add-movie-modal-label"
							aria-hidden="true"
						>
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="add-movie-modal-label">
											Add a movie into the dataset
										</h5>
										<button
											type="button"
											class="btn-close"
											data-bs-dismiss="modal"
											aria-label="Close"
										></button>
									</div>
									<!-- Form -->
									<div class="modal-body">
										<form>
											<div class="mb-3 row">
												<label for="insert-name" class="col-sm-3 col-form-label"
													>Name</label
												>
												<div class="col-sm-9">
													<!-- INPUT VALUE OF MOVIE NAME HERE -->
													<input
														class="form-control"
														name="insert-name"
														id="insert-name"
														placeholder="Spirited Away"
													/>
												</div>
											</div>
											<div class="mb-3 row">
												<label for="insert-year" class="col-sm-3 col-form-label"
													>Year</label
												>
												<div class="col-sm-9">
													<!-- INPUT VALUE OF MOVIE YEAR HERE -->
													<input
														type="number"
														class="form-control"
														name="insert-year"
														id="insert-year"
														placeholder="2001"
													/>
												</div>
											</div>
										</form>
									</div>
									<!-- End of Form -->
									<div class="modal-footer">
										<button
											type="button"
											class="btn btn-secondary"
											data-bs-dismiss="modal"
										>
											Cancel
										</button>
										<button
											id="add-movie-save"
											type="button"
											class="btn btn-primary"
											data-bs-dismiss="modal"
										>
											Confirm
										</button>
									</div>
								</div>
							</div>
						</div>
						<!-- End of Modal -->
						<button id="clear" type="button" class="btn btn-secondary btn-sm">
							Clear Results
						</button>
					</div>
				</div>

				<div>
					<table class="table">
						<thead>
							<tr>
								<th class="col-2">ID</th>
								<th class="col-6">Name</th>
								<th class="col-2">Year</th>
								<th class="col-2">Operation</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<th scope="row" id="id-table">1</th>
								<td id="name-table">Nausicaä of the Valley of the Wind</td>
								<td id="year-table">1984</td>
								<td>
									<button
										id="edit"
										class="operation"
										type="button"
										class="btn btn-primary btn-sm"
										data-bs-toggle="modal"
										data-bs-target="#edit-movie-modal"
									>
										<i class="fa-solid fa-pen"></i>
									</button>
									<!-- Modal -->
									<div
										class="modal fade"
										id="edit-movie-modal"
										tabindex="-1"
										aria-labelledby="edit-movie-modal-label"
										aria-hidden="true"
									>
										<div class="modal-dialog">
											<div class="modal-content">
												<div class="modal-header">
													<h5 class="modal-title" id="add-movie-modal-label">
														Edit an existing movie
													</h5>
													<button
														type="button"
														class="btn-close"
														data-bs-dismiss="modal"
														aria-label="Close"
													></button>
												</div>
												<!-- Form -->
												<div class="modal-body">
													<form>
														<div class="mb-3 row">
															<label
																for="update-id"
																class="col-sm-3 col-form-label"
																>ID</label
															>
															<div class="col-sm-9">
																<!-- INPUT VALUE OF MOVIE ID HERE -->
																<input
																	class="form-control"
																	name="update-id"
																	id="update-id"
																	value="1"
																readonly>
															</div>
														</div>
														<div class="mb-3 row">
															<label
																for="update-name"
																class="col-sm-3 col-form-label"
																>Name</label
															>
															<div class="col-sm-9">
																<!-- INPUT VALUE OF MOVIE NAME HERE -->
																<input
																	class="form-control"
																	name="update-name"
																	id="update-name"
																	value="Nausicaä of the Valley of the Wind"
																/>
															</div>
														</div>
														<div class="mb-3 row">
															<label
																for="update-year"
																class="col-sm-3 col-form-label"
																>Year</label
															>
															<div class="col-sm-9">
																<!-- INPUT VALUE OF MOVIE YEAR HERE -->
																<input
																	class="form-control"
																	name="update-year"
																	id="update-year"
																	value="1984"
																	readonly>
															</div>
														</div>
													</form>
												</div>
												<!-- End of Form -->
												<div class="modal-footer">
													<button
														type="button"
														class="btn btn-secondary"
														data-bs-dismiss="modal"
													>
														Cancel
													</button>
													<button
														id="update-movie-save"
														type="button"
														class="btn btn-primary"
														data-bs-dismiss="modal"
													>
														Confirm
													</button>
												</div>
											</div>
										</div>
									</div>
									<!-- End of Modal -->
									<button
										id="delete"
										class="operation"
										type="button"
										class="btn btn-primary btn-sm"
										data-bs-toggle="modal"
										data-bs-target="#delete-movie-modal"
									>
										<i class="fa-solid fa-trash"></i>
									</button>
									<!-- Modal -->
									<div
										class="modal fade"
										id="delete-movie-modal"
										tabindex="-1"
										aria-labelledby="delete-movie-modal-label"
										aria-hidden="true"
									>
										<div class="modal-dialog">
											<div class="modal-content">
												<div class="modal-header">
													<h5 class="modal-title" id="delete-movie-modal-label">
														Delete an existing movie
													</h5>
													<button
														type="button"
														class="btn-close"
														data-bs-dismiss="modal"
														aria-label="Close"
													></button>
												</div>
												<!-- INPUT VALUE OF MOVIE ID HERE(?) -->
												<div class="modal-body">
													<p>
														Are you sure you would like to delete movie ID 1?
													</p>
												</div>
												<div class="modal-footer">
													<button
														type="button"
														class="btn btn-secondary"
														data-bs-dismiss="modal"
													>
														Cancel
													</button>
													<button
														id="delete-movie"
														type="button"
														class="btn btn-primary"
														data-bs-dismiss="modal"
													>
														Confirm
													</button>
												</div>
											</div>
										</div>
									</div>
									<!-- End of Modal -->
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>

			<!-- BOTTOM SECTION -->
			<div class="section">
				<div class="text-center">
					<!-- Button trigger modal -->
					<button
						type="button"
						class="btn btn-primary btn-sm"
						data-bs-toggle="modal"
						data-bs-target="#see-changes-modal"
					>
						See Changes
					</button>
					<!-- Modal -->
					<div
						class="modal fade"
						id="see-changes-modal"
						tabindex="-1"
						aria-labelledby="see-changes-modal-label"
						aria-hidden="true"
					>
						<div class="modal-dialog modal-dialog-scrollable">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="see-changes-modal-label">
										Here's the list of all changes you made!
									</h5>
									<button
										type="button"
										class="btn-close"
										data-bs-dismiss="modal"
										aria-label="Close"
									></button>
								</div>
								<div class="modal-body">
									<ul class="list-group">
										<li class="list-group-item">
											Edited movie ID 1 into Nausicaä of the Valley of the Wind
											(1984)
										</li>
										<li class="list-group-item">
											Added movie ID 2, Spirited Away (2001)
										</li>
									</ul>
								</div>
								<div class="modal-footer">
									<button
										type="button"
										class="btn btn-secondary"
										data-bs-dismiss="modal"
									>
										Close
									</button>
									<button
										type="button"
										class="btn btn-primary"
										data-bs-dismiss="modal"
									>
										Generate Report
									</button>
								</div>
							</div>
						</div>
					</div>
					<!-- End of modal -->
				</div>
			</div>
		</div>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
			crossorigin="anonymous"
		></script>
	</body>
</html>
